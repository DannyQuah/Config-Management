\newcounter{hours} \newcounter{minutes}
\newcommand{\SetTime}{%
 \setcounter{hours}{\time}%
 \divide\value{hours} by 60%
 \setcounter{minutes}{\thehours}%
 \multiply\value{minutes} by 60%
 \advance\value{minutes} by -\time%
 \multiply\value{minutes} by -1%
}
%% Thu Apr  1 17:29:00 1999 -- Danny T. Quah (dquah@twinpeaks.lse.ac.uk)
\newcommand\now{%
 \ifthenelse{\value{hours} < 12}%
  {% hours < 12
   \ifthenelse{\value{hours} = 0}{\advance\value{hours} by 12}%
    {}%
   \thehours:%
   \ifthenelse{\value{minutes} < 10}{0}{}\theminutes{} A.M.%
  }%
  {% hours > 12
   \advance\value{hours} by -12 \thehours:%
   \ifthenelse{\value{minutes} < 10}{0}{}\theminutes{} P.M.%
  }%
}%
