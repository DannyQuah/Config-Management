\newcommand\qSsTopLineAcross{{\color{BrickRed}%
 \rule[-1.0pt]{0.667\textwidth}{2.5pt}%
 \rule{0.333\textwidth}{0.4pt}}}
%
\newcommand\qSsBtmLineAcross{{\color{BrickRed}\hrule}}
\newcommand\qSsHeading[1]{{\noindent\large\textbf{#1}}}
\newcommand\qSsSlideFooter{\vfil\qSsBtmLineAcross\bigskip}
\newcommand\qSsSlideHeader[1]{%
 \vspace*{3pt}
 \qSsHeading{#1}
 \smallskip\qSsTopLineAcross\bigskip
}
