\newcommand\qMkAxes[2]{%  Make axes, args horizontal and vertical labels
 \drawdim cm
 \linewd 0.015 %
 \arrowheadsize l:0.3 w:0.1 %
 % Origin
 \move (0 0) %
 \arrowheadtype t:F \avec (0 6.0) %
 \htext (-0.5 6.1){#2} %
 \move (0 0) %
 \arrowheadtype t:F \avec (9.0 0) %
 \htext (8.8 -0.5){#1} %
 \linewd 0.01 % always restore!
\relax
}%end\newcommand\qMkAxes
%
%% Bezier curve with arrowhead
\def\cavec (#1 #2)(#3 #4)(#5 #6){%
 \clvec (#1 #2)(#3 #4)(#5 #6)%
 \cossin (#3 #4)(#5 #6)\cosa\sina
 \rmove (0 0)
 \bsegment
  \drawdim in \setsegscale 0.05
  \move ({-\cosa} -\sina) \avec (0 0)
 \esegment
}% end \def\cavec

